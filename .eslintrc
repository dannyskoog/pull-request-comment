{
    "parser": "@typescript-eslint/parser",
    "env": {
        "commonjs": false,
        "es6": true,
        "jest": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "rules": {
        "semi": "error",
        "comma-dangle": ["error", "always-multiline"],
        "indent": ["error", 2],
        "eol-last": "error",
        "object-curly-spacing": ["error", "always"]
    }
}
